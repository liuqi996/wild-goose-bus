  box-shadow: 2px 2px 2px 0px #88888850;
}
.mini_title{
  margin:15px 0 15px 15px;
  font-size: 17px;
  letter-spacing: 1.8px;
  font-weight: 600;
  color:#fff;
}
.line{
  width: 90%;
  margin-left:5%;
  border:0.3px solid #fff;
}
.intro{
  margin:18px 10px 0 10px;
  font-size: 14px;
  color:#646464;
  letter-spacing: 1px;
}
.menu_intro{
  margin-top:25px;
}
.menu_title{
  font-size: 18px;
  color:#2D7FFF;
