/* pages/recharge/detail.wxss */
.bj{
  width: 100%;
  height: auto;
}
.bj1{
  margin-top: -10px;
  width: 100%;
  height: 85vh;
  background: linear-gradient(to right,#E96749,#FBAF3B);
}
.content{
  width: 90%;
  background-color: rgba(255, 255, 255, 0.5);
  margin-left: 5%;
  margin-top: -120px;
  padding-bottom: 17px;
}
.title{
  padding-top: 15px;
  text-align: center;
  font-size: 18px;
  font-weight: 700;
  letter-spacing: 5px;
}
.name{
  font-size: 13px;
  padding-left: 10px;
}
.map{
  width: 93%;
  height: 230px;
  margin-top: 10px;
  margin-left: 10px;
  margin-right: 10px;
}
.nav{
  margin-top: 10px;
  background-color: rgba(255, 255, 255, 0.5);
  width: 93%;
  margin-left: 10px;
  margin-right: 10px;
  display: flex;
}
.left,.right{
  width: 50%;
  height: 30px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.left{
  border-right: 1px dashed #E96749;
}
.back{
  margin-top: 20px;
  width: 80%;
  height: 50px;
  margin-left: 10%;
  background-color: rgba(255, 255, 255, 0.5);
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  letter-spacing: 10px;
  font-weight: 800;
}
.sjx{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 120px;
  border-radius: 10px;
  margin-top: 120px;
  width: 0;
  height: 0;
  border-width: 0 10px 10px;
  border-style: solid;
  border-color: transparent transparent white;
}
.dh{
  margin-top: -3px;
  text-align: center;
  width: 130px;
  height: 30px;
  background-color: white;
  display: flex;
  align-items: center;
  margin-left: 70px;
  border-radius: 10px;
  font-size: 13px;
  color: #E96749;
}
.dht{
  width: 130px;
  line-height: 30px;
  text-align: center;
}