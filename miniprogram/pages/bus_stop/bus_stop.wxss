/* pages/bus_stop/bus_stop.wxss */
/* pages/station_map/station_map.wxss */
page{
  background-color: #fff;
}
.map{
  width: 100%;
  height: 40vh;
}
.huidi{
  background-color: #f6f6f6;
}
.xuxian{
  margin-top:7px;
  border-bottom: 1px dashed #f6f6f6;
}
.message{
  width: 100%;
  background-color:#fff;
  border-radius: 20rpx;
}
.line{
  background-color: #fff;
  width: 94%;
  margin-left:3%;
}
.station_top{
  padding-top:15px;
  /* margin-top: 15px; */
  display: flex;
}
.station_icon{
  width:20px;
  height: 20px;
}
.xianlu{
  margin-top: 10px;
}
.xianluhao{
  font-weight: 800;
  letter-spacing: 1px;
  color: #0060FF;
}
.tips{
  font-size: 12px;
}
.stop{
  display: flex;
  margin-top: 15px;
}
.stop_item{
  margin-top: 10px;
}
.dot_first{
  width: 12px;
  height: 12px;
  border-radius: 12px;
  background-color: #FF0033;
  z-index: 20;
  margin-top: -2px;
  margin-left: 6px;
}
.dot_last{
  width: 12px;
  height: 12px;
  border-radius: 12px;
  background-color: #FF0033;
  z-index: 20;
  margin-top: -2px;
  margin-left: -3px;
  margin-right: 6px;
}
.dot{
  width: 10px;
  height: 10px;
  border-radius: 10px;
  background-color: #FF6633;
  margin-top: -2px;
  z-index: 20;
  margin-left: -2px;
}
.dot1{
  width: 15px;
  height: 15px;
  border-radius: 15px;
  background-color: crimson;
  margin-top: -5px;
  z-index: 20;
  margin-left: -2px;
}
.toward{
  width: 23px;
  height: 5px;
  background-color: #0060FF;
  margin-left: -3px;
}
.first_station{
  line-height: 15px;
  margin-top: 8px;
  width: 15px;
  height: 150px;
  writing-mode: vertical-lr;
  letter-spacing: 3px;
  margin-left: 6px;
  font-weight: 700;
  font-size: 15px;
}
.first_station:active {
  /* color: rgba(46, 103, 222, 0.13); */
  color: rgb(250, 7, 47);
}
.last_station{
  line-height: 15px;
  margin-top: 8px;
  height: 150px;
  writing-mode: vertical-lr;
  letter-spacing: 3px;
  float: right;
  margin-right: 8px;
  font-weight: 700;
  font-size: 15px;
}
.station8{
  line-height: 15px;
  margin-top: 8px;
  width: 15px;
  height: 150px;
  writing-mode: vertical-lr;
  letter-spacing: 3px;
  margin: 8px auto;
  font-size: 15px;
}